# Auto detect text files and normalize line endings
* text=auto

# Force LF for code files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf

# Shell scripts
*.sh text eol=lf

# Ignore binaries
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary

# Node modules and build outputs
node_modules/ export-ignore
dist/ export-ignore
build/ export-ignore
